<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_hr_employee_name_extended" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.employee.name.extended</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <group string="Employee Names (Codex)">
                    <group>
                        <field name="user_name_format" widget="radio"/>
                    </group>
                    <group attrs="{'invisible': [('user_name_format', '!=', 'custom')]}">
                        <field name="user_name_custom_pattern" placeholder="{last_name}, {first_name} ({nickname})"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
