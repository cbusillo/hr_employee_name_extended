<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_hr_employee_name_extended" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.employee.name.extended</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='employees_setting_container']" position="inside">
                <setting id="hr_employee_name_format_setting" string="Employee Name Format">
                    <div class="content-group">
                        <field name="user_name_format" widget="radio"/>
                    </div>
                    <div class="content-group" invisible="user_name_format != 'custom'">
                        <field name="user_name_custom_pattern"
                               class="w-100"
                               placeholder="{last_name}, {first_name} ({nickname})"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
